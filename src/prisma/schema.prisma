generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Client {
  id       Int       @id @default(autoincrement())
  name     String
  phone    String
  address  String
  document String    @unique
  vehicles Vehicle[]
}

model Vehicle {
  id       Int    @id @default(autoincrement())
  name     String
  plate    String
  color    String
  year     Int
  city     String
  clientId Int
  client   Client @relation(fields: [clientId], references: [id])
}

model Budget {
  id         Int          @id @default(autoincrement())
  totalValue Float
  budgetItem BudgetItem[]
}

model Services {
  id          Int          @id @default(autoincrement())
  description String
  code        String
  value       Float
  budgetItem  BudgetItem[]
}

model Products {
  id         Int          @id @default(autoincrement())
  name       String
  price      Float
  brand      String
  budgetItem BudgetItem[]
}

model BudgetItem {
  id         Int       @id @default(autoincrement())
  service    Services? @relation(fields: [servicesId], references: [id])
  product    Products? @relation(fields: [productsId], references: [id])
  quantity   Int
  budgetId   Int
  budget     Budget    @relation(fields: [budgetId], references: [id])
  servicesId Int?
  productsId Int?
}
